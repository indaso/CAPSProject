<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GuidedActivity"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/support_receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Albert Shu"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/support_receiver_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button2" />

        <Button
            android:id="@+id/support_receiver_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button1" />
    </LinearLayout>

    <TextView
        android:id="@+id/support_receiver_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="This gives advice for the support receiver!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/support_giver_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="This gives advice for the support giver!"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
	    <Button
	        android:id="@+id/support_giver_button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Button1" />
    
	    <Button
	        android:id="@+id/support_giver_button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Button2" />
    </LinearLayout>

    <TextView
        android:id="@+id/support_giver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tony Xie"
        android:textSize="12sp" />

</LinearLayout>